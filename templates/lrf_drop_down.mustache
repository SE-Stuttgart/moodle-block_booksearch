{{!
    @template block_slidefinder/lrf_drop_down

    Complex Lecture Search

    Example context (json):
    {
        "action": "https://moodle.local/admin/search.php",

        "course_selector_param_name": "lrf_cid",
        "course_selector_options": [{id:3, value:VALUE}],

        "hidden_params":[{name:cache, value=1}]
    }
}}
<div class="simplesearchform">
    {{^inform}}
    <form autocomplete="off" action="{{action}}" method="get" accept-charset="utf-8" class="mform form-inline simplesearchform">
    {{/inform}}

    <div class="input-group" style="margin: 5px; margin-right: 5rem">
        <label for="block_slidefinder_courseinput-{{uniqid}}">
            <span class="sr-only">{{course_selector_param_name}}</span>
        </label>
        <select
           id="block_slidefinder_courseinput-{{uniqid}}"
           class="custom-select singleselect form-control"
           name="{{course_selector_param_name}}"
           data-region="input"
           style="margin-left: 0rem"
           onChange="this.form.submit()"
        >
            {{#course_selector_options}} <option value="{{id}}">{{value}}</option>{{/course_selector_options}}
        </select>
        {{#hidden_params}} <input type="hidden" name="{{name}}" value="{{value}}"/>{{/hidden_params}}
    </div>

    {{^inform}}
    </form>
    {{/inform}}
</div>
